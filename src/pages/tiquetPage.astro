            39% 98%,
            42% 98.6%,
            45% 98%,
            48% 99%,
            51% 98%,
            54% 98.6%,
            57% 98%,
            60% 98.6%,
            63% 98%,
            66% 98.6%,
            69% 98%,
            72% 98.6%,
            75% 98%,
            78% 99%,
            81% 98%,
            84% 98.6%,
            87% 98%,
            90% 98.6%,
